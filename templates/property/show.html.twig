{% extends "base.html.twig"%}
{% block title ' tous les biens' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {%for message in app.flashes('success')%} 
               <div class="alert alert-success">
                   {{message}}
               </div>
            {%endfor%}   





            <div class="row">
                     <div class="col-md-8">
                      {%if property.filename %}
        <img src="{{vich_uploader_asset(property,'imageFile')|imagine_filter('medium')}}" alt="card-img-top" 
             style="width:100%;height:auto;">
        {% else %}
            <img src="{{'images/properties/empty.jpg'|imagine_filter('medium')}}" alt="card-img-top" 
             style="width:100%;height:auto;">
        {% endif %}
                </div>
                             <div class="col-md-4">

        <tbody>

            {% for image in property.images %}
                
                <div class="col-md-12">
<img src="{{asset(image.path)|imagine_filter('medium')}}" alt="card-img-top" 
             style="width:100%;height:auto;">        </div>
                      {% endfor %}
           
           
           </div>     
           </div>
                

    </div>

    <div class="col mt-4" >
    
    </div>
            <h1>{{property.title}}</h1>
            <h2>{{property.room}} pièces - {{property.surface }} m²</h2>
            <div class="text-primary" style="font-size: 2rem; font-weight: bold;">{{property.price }} TND </div>
   
            <a href="#" class="btn btn-primary" id="contactButton"
            {% if form.vars.submitted %} style="display:none;"{% endif %}>
            contacter l'agence </a>
            <div id="contactForm" class="mt-4" 
           {% if not form.vars.submitted %} style="display:none;" {% endif %}>

         {{form_start(form)}}
         <div class="row">
             <div class="col">{{form_row(form.firstname,{'label':'Nom ',
             'attr':{'placeholder':'nom ...'}})}}</div>
             <div class="col">{{form_row(form.lastname,{'label':'Prénom',
             'attr':{'placeholder':'prénom ...'}})}}</div>
    </div> 
    <div class="row">
             <div class="col">{{form_row(form.phone, {'label':'Phone',
             'attr':{'placeholder':'phone ...'}})}}</div>
             <div class="col">{{form_row(form.email, {'label':'Email ',
             'attr':{'placeholder':'adresse email ...'}})}}</div>
    </div> 
    <div  id="post_content" class="row">{{form_row(form.message)}}
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Envoyer</button>
    </div>    
    {{form_end(form)}}

            </div>    
        </div>
    </div> 
    </div> 
    </div> 

    
             
{% endblock %}
 {% block javascripts %}
    
        
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js">
  </script>

      {{ encore_entry_script_tags('app') }}

<script src="{{ asset('build/app.js') }}"></script>

        {% endblock %}